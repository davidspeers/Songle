<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.songlek.ModeActivity">

    <RadioButton
        android:id="@+id/easyRadioButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/easy_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"/>

    <RadioButton
        android:id="@+id/normalRadioButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/normal_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easyRadioButton" android:layout_marginStart="16dp" />

    <RadioButton
        android:id="@+id/hardRadioButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/hard_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalRadioButton" android:layout_marginStart="16dp"/>

    <RadioButton
        android:id="@+id/vHardRadioButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/very_hard_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hardRadioButton" android:layout_marginStart="16dp" />

    <RadioButton
        android:id="@+id/extremeRadioButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/extreme_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHardRadioButton" android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/modeDescription"
        android:layout_width="197dp"
        android:layout_height="311dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="@string/modeParagraph"
        app:layout_constraintStart_toEndOf="@+id/hardRadioButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playGameButton"
        android:layout_width="360dp"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/playsonglemodebutton3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/todo"
        android:layout_marginStart="16dp" />

</android.support.constraint.ConstraintLayout>
