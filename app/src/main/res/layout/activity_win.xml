<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.songlek.WinActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="69dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/congratulations"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/lyricPointsView"
        android:layout_width="358dp"
        android:layout_height="63dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/lp_gained"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="357dp"
        android:layout_height="68dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/score"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyricPointsView" android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/highscoreView"
        android:layout_width="357dp"
        android:layout_height="70dp"
        android:layout_marginBottom="165dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/highscore"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreView"
        app:layout_constraintVertical_bias="0.136" android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="355dp"
        android:layout_height="81dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@color/yellow"
        android:text="@string/play_again"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highscoreView"
        tools:targetApi="lollipop" android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="352dp"
        android:layout_height="81dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/yellow"
        android:text="@string/go_to_main_menu"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgainButton" android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>
